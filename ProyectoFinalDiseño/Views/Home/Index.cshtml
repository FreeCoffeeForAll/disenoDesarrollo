@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center py-5">
    <h1 class="display-4">Bienvenido a AquaGestor</h1>
    <p class="lead">Una plataforma para gestionar eficientemente los recursos hídricos de tu gimnasio.</p>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Gestión de Inventario</h5>
                    <p class="card-text">Administra y controla los productos de tu gimnasio con facilidad.</p>
                    <a href="/Inventario" class="btn btn-primary">Acceder</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Módulo de Contenido</h5>
                    <p class="card-text">Administra y proporciona acceso al contenido de la aplicación.</p>
                    <a href="@Url.Action("Index", "Contenido")" class="btn btn-primary">Ver Contenido</a>
                </div>
            </div>
        </div>
    </div>
</div>
