@model LoginInputModel
@inject IOptions<GoogleRecaptcha> _options

<div class="container d-flex justify-content-center">
    <form method="post">
        <input type="hidden" id="token" asp-for="Token" />
        <input type="hidden" id="returnUrl" asp-for="ReturnUrl" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <!-- Email input -->
        <div class="form-outline mb-4">
            <input asp-for="Email" type="email" class="form-control" />
            <label asp-for="Email" class="form-label">Email address</label>
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>

        <!-- Password input -->
        <div class="form-outline mb-4">
            <input asp-for="Password" type="password" class="form-control" />
            <label asp-for="Password" class="form-label">Password</label>
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>

        <!-- 2 column grid layout for inline styling -->
        <div class="row mb-4">
            <div class="col d-flex justify-content-center">
                <!-- Checkbox -->
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" checked />
                    <label class="form-check-label"> Remember me </label>
                </div>
            </div>

            <div class="col">
                <!-- Simple link -->
                <a href="#!">Forgot password?</a>
            </div>
        </div>

        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>
    </form>

    <!-- Register buttons -->
    <div class="text-center">
        <p>Not a member? <a asp-area="" asp-controller="Account" asp-action="Register">Register</a></p>
        <p>or sign up with:</p>

        <form asp-action="ExternalLogin" method="post" asp-route-returnUrl="@Model.ReturnUrl">
            @foreach (var externalLogin in Model.ExternalLogins)
            {
                <button type="submit" class="btn btn-link btn-floating mx-1"
                    name="provider" value="@externalLogin.Name">
                    @switch (externalLogin.Name)
                    {
                        case "Google":
                            <i class="fab fa-google"></i>
                            break;

                        default:
                            @externalLogin.DisplayName
                            break;
                    }
                </button>
            }
        </form>

        @*<button type="button" class="btn btn-link btn-floating mx-1">
        <i class="fab fa-facebook-f"></i>
        </button>

        <button type="button" class="btn btn-link btn-floating mx-1">
        <i class="fab fa-google"></i>
        </button>

        <button type="button" class="btn btn-link btn-floating mx-1">
        <i class="fab fa-twitter"></i>
        </button>

        <button type="button" class="btn btn-link btn-floating mx-1">
        <i class="fab fa-github"></i>
        </button>*@
    </div>
</div>

<script src="https://www.google.com/recaptcha/api.js?render=@_options.Value.SiteKey"></script>

@section Scripts
    {
    <script>
        function GetToken() {
            grecaptcha.ready(function () {
                grecaptcha.execute('@_options.Value.SiteKey', { action: 'submit' }).then(function (token) {
                    console.log(token);
                    $("#token").val(token)
                });
            });
        }

        $(document).ready(function () {
            GetToken();
            setInterval(GetToken(), 120000);
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}