@{
    ViewData["Title"] = "Subscribe";
}

<h2 class="mt-4 text-center">Choose Your Plan</h2>
<p class="text-white text-center mb-4">Compare our plans and pick what suits your goals</p>

<div class="row justify-content-center">
    <div class="col-md-5 mb-4">
        <div class="card border-primary shadow">
            <div class="card-header bg-primary text-white text-center">
                <h3>Basic Plan</h3>
                <p>₡15,000 / month</p>
            </div>
            <div class="card-body text-dark">
                <ul class="list-unstyled">
                    <li>✅ Cardio area</li>
                    <li>✅ Weight training</li>
                    <li>✅ Group classes</li>
                    <li>✅ Lockers & Showers</li>
                    <li>❌ Body Composition Tracking</li>
                    <li>❌ Spa Access</li>
                    <li>❌ Invite Friends</li>
                </ul>
                <form asp-action="Subscribe" method="post">
                    <input type="hidden" name="subscriptionType" value="Basic" />
                    <button type="submit" class="btn btn-outline-primary w-100 mt-3">Select Basic</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-5 mb-4">
        <div class="card border-warning shadow">
            <div class="card-header bg-warning text-dark text-center">
                <h3>Premium Plan</h3>
                <p>₡25,000 / month</p>
            </div>
            <div class="card-body text-dark">
                <ul class="list-unstyled">
                    <li>✅ Cardio area</li>
                    <li>✅ Weight training</li>
                    <li>✅ Group classes</li>
                    <li>✅ Lockers & Showers</li>
                    <li>✅ Body Composition Tracking</li>
                    <li>✅ Spa Access</li>
                    <li>✅ Invite Friends</li>
                </ul>
                <form asp-action="Subscribe" method="post">
                    <input type="hidden" name="subscriptionType" value="Premium" />
                    <button type="submit" class="btn btn-warning w-100 mt-3">Select Premium</button>
                </form>
            </div>
        </div>
    </div>
</div>
