@model ProyectoFinalDiseño.Models.Inventario

@{
    ViewData["Title"] = "Crear Inventario";
}

<h2>Crear Inventario</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Cantidad"></label>
        <input asp-for="Cantidad" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Estado"></label>
        <input asp-for="Estado" type="checkbox" />
    </div>
    <div class="form-group">
        <label asp-for="CategoriaID"></label>
        <select asp-for="CategoriaID" class="form-control" asp-items="ViewBag.Categorias"></select>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
