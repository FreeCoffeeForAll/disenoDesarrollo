@model IEnumerable<ListTaskDTO>

@{
    ViewData["Title"] = "Tasks";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Subject</th>
                        <th scope="col">Owner</th>
                        <th scope="col">Effort</th>
                        <th scope="col">Completed</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model)
                    {
                        <tr>
                            <th scope="row">@task.Id</th>
                            <td>@task.Subject</td>
                            <td>@task.User</td>
                            <td>@task.Effort</td>
                            <td>@Html.YesNo(task.Completed)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>