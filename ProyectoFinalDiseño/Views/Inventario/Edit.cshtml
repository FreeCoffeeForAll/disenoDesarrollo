@model ProyectoFinalDiseño.Models.Inventario

<h2>Editar Objeto del Inventario</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="ObjetoID" />
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <input asp-for="Descripcion" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cantidad"></label>
        <input asp-for="Cantidad" class="form-control" type="number" required />
    </div>
    <div class="form-group">
        <label asp-for="Estado"></label>
        <input asp-for="Estado" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="CategoriaID">Categoría</label>
        <select asp-for="CategoriaID" asp-items="ViewBag.Categorias" class="form-control">
            <option value="">Seleccione una categoría</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
