@model ProyectoFinalDiseño.Models.Categoria

<h2>Editar Categoría</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="CategoriaID" />
    <div class="form-group">
        <label asp-for="NombreCategoria"></label>
        <input asp-for="NombreCategoria" class="form-control" />
        <span asp-validation-for="NombreCategoria" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Guardar Cambios</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Volver</a>
