@model ProyectoFinalDiseño.Models.Training.TrainingClass

@{
    ViewData["Title"] = "Training Class Details";
}

<h2>Training Class Details</h2>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Day</dt>
        <dd class="col-sm-10">@Model.DayOfWeek</dd>

        <dt class="col-sm-2">Start Time</dt>
        <dd class="col-sm-10">@Model.StartTime</dd>

        <dt class="col-sm-2">End Time</dt>
        <dd class="col-sm-10">@Model.EndTime</dd>

        <dt class="col-sm-2">Max Participants</dt>
        <dd class="col-sm-10">@Model.MaxParticipants</dd>

        <dt class="col-sm-2">Current Participants</dt>
        <dd class="col-sm-10">@Model.CurrentParticipants</dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
