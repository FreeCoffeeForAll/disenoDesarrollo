@model IEnumerable<ProyectoFinalDiseño.Models.Categoria>

<h2>Categorías</h2>

<p>
    <a asp-action="Crear" class="btn btn-primary">Crear Nueva Categoría</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NombreCategoria</td>
                <td>
                    <a asp-action="Detalles" asp-route-id="@item.CategoriaID" class="btn btn-info">Detalles</a>
                    <a asp-action="Editar" asp-route-id="@item.CategoriaID" class="btn btn-warning">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@item.CategoriaID" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
